<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.find_price.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/simpleBox"
        style="@style/CategoryStyle"
        android:background="#5e35b1"
        android:text="Simple Box"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/tray"
        style="@style/CategoryStyle"
        android:background="#0288d1"
        android:text="Tray"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/coaster"
        style="@style/CategoryStyle"
        android:background="#f9a825"
        android:text="Coaster"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/frame"
        style="@style/CategoryStyle"
        android:background="#6d4c41"
        android:text="Frame"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/tissueBox"
        style="@style/CategoryStyle"
        android:background="#26a69a"
        android:text="Tissue Box"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/sixCornerBox"
        style="@style/CategoryStyle"
        android:background="#00c853"
        android:text="Six Corner Box"
        android:textAllCaps="true"/>
    <TextView
        android:id="@+id/almirah"
        style="@style/CategoryStyle"
        android:background="#e64a19"
        android:text="Almirah"
        android:textAllCaps="true"/>

</LinearLayout>
</ScrollView>